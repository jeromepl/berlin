.content
  %h2 Register

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

    = errors_for resource

    .field
      = f.label :username
      = f.text_field :username
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .field.nolabel
      = f.submit "Sign up"
