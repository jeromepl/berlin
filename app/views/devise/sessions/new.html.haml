.content
  %h2= t('devise.keywords.sign_in')

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = hidden_field_tag :return_to, params[:return_to]
    = devise_error_messages!

    .field
      = f.label :login
      = f.text_field :login
    .field
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      .field
        = f.label :remember_me
        = f.check_box :remember_me

    .field.nolabel
      = f.submit t('devise.keywords.sign_in')

    .field.nolabel.text
      = link_to t('devise.passwords.forgot'), new_password_path(resource_name)
