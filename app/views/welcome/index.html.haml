.content#welcome
  %h2= t('titles.welcome')

  .intro
    %blockquote.quote
      = t('intro.quote')
      .signature
        = ["NASA Engineer", "Barack Obama", "Mark Zuckerberg", "Steve Jobs", "Sarah Palin", "Ginette St-Pierre", "Pikachu", "Bill Gates"].sample

  .map-container
    %img{:src => "/images/screenshots/game-1.jpg"}

  %div{:style=>"clear: both;"}

  %table.breakdown{:cellspacing=>10}
    %tr
      - items = t("intro.breakdown").values
      - total = items.count
      - items.each do |item|
        %td{:style=>"width: #{100 / total}%;"}
          %h4= item[:title]
          %p= item[:text]
