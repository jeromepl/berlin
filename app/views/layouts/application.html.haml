!!! 5

%html
  %head
    %title Berlin

    = stylesheet_link_tag :all, :cache=>true
    = javascript_include_tag  :defaults,
                              'prototype',
                              'raphael',
                              'thirdside',
                              'simulator',
                              :cache=>true
    = csrf_meta_tag

  %body
    #wrapper
      #header
        %h1
          Berlin
          
        %ul#menu
          - menu.each do |model, links|
            %li{:class=>controller.controller_name.classify == model.name ? :active : nil}
              = link_to model.model_name.human, '#'
              %ul
                - links.each do |link|
                  %li= link_to t( "controllers.#{model.model_name.underscore.pluralize}.actions.#{link[:action]}" ), link[:href]

      #main
        #content
          - if false
            - if user_signed_in?
              = render :partial => '/layouts/signed_in'
            - else
              = render :partial => '/layouts/log_in'

          = yield

      #footer
        2011 &copy Thirdside