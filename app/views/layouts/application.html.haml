!!! 5

%html
  %head
    %title Berlin

    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"http://fonts.googleapis.com/css?family=Michroma"}
    = stylesheet_link_tag :all, :cache=>true
    = javascript_include_tag  :defaults,
                              'raphael',
                              'graphico',
                              'thirdside',
                              'simulator',
                              :cache=>true
    = csrf_meta_tag

  %body
    #wrapper
      #header
        %h1
          Berlin

        - if user_signed_in?
          = render :partial=>'/layouts/info'

      %ul#menu
        - menu.each do |model, url|
          %li{:class=>controller.controller_name == model.model_name.tableize ? 'active' : nil}= link_to model.model_name.human.pluralize, url

        - unless user_signed_in?
          .right
            = link_to 'Sign in', new_session_path( :user )
            = link_to 'Register', new_registration_path( :user )

      #main

        - flash.each do |flash, message|
          .flash{:class=>flash}= message

        = yield

      #footer
        2011 &copy Thirdside