!!! 5

%html
  %head
    %title Berlin

    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"http://fonts.googleapis.com/css?family=Michroma"}
    = stylesheet_link_tag :all, :cache=>true
    = javascript_include_tag  :defaults,
                              'raphael',
                              'thirdside',
                              'simulator',
                              :cache=>true
    = csrf_meta_tag

  %body
    #wrapper
      #header
        %h1
          Berlin

        - if user_signed_in?
          = render :partial=>'/layouts/info'

      %ul#menu
        - menu.each do |model, url|
          %li{:class=>controller.controller_name == model.model_name.tableize ? 'active' : nil}= link_to model.model_name.human.pluralize, url

      #main
        - if content_for? :top
          = yield :top

        .content
          = yield

        - if content_for? :bottom
          = yield :bottom

      #footer
        2011 &copy Thirdside