!!! 5

%html
  %head
    %title Berlin

    = stylesheet_link_tag :all, :cache=>true
    = javascript_include_tag  :defaults,
                              'prototype',
                              'raphael',
                              'thirdside',
                              'simulator', :cache=>true
    = csrf_meta_tag

  %body

    #wrapper
      #header
        %h1#logo Berlin

        - if user_signed_in?
          = render :partial => '/layouts/signed_in'
        - else
          = render :partial => '/layouts/log_in'

      %ul.menu
        %li= link_to ArtificialIntelligence.human_name.pluralize, artificial_intelligences_path
        %li= link_to Game.human_name.pluralize, games_path

      = yield