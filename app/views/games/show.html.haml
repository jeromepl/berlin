%h1= @game.map.name


#container{:style=>"width: 1024px; height: 800px; position: relative;"}

#progress_bar_container
  #progress_bar

#controls
  %input#rewind{:type=>:submit, :value=>"<<"}
  %input#back{:type=>:submit, :value=>"<"}
  %input#play{:type=>:submit, :value=>"play"}
  %input#pause{:type=>:submit, :value=>"pause"}
  %input#next{:type=>:submit, :value=>">"}
  %input#end{:type=>:submit, :value=>">>"}

#player-list

:javascript
  new TS.AIPlayback("container", "controls", "player-list", "#{map_path(@game.map, :format=>:json)}", "#{game_path(@game, :format=>:json)}");